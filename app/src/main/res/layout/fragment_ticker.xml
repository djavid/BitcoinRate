<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.fragment.TickerFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_ticker_list"
        android:name="com.djavid.bitcoinrate.view.fragment.TickerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/recycler_item_ticker" />

    <include layout="@layout/view_progressbar"
        android:visibility="invisible"/>

</LinearLayout>
