<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix, ContentDescription"
    android:id="@+id/ll_label_btn"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:layout_marginStart="7dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/rounded_label">

        <TextView
            android:id="@+id/tv_ticker_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorTickerLabelText"
            android:text=""
            android:visibility="gone"
            fontpath="roboto-regular.ttf" />

        <ImageView
            android:id="@+id/iv_label_trending"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:layout_marginStart="1dp"
            app:srcCompat="@drawable/ic_trending_up_white_24px" />

        <ImageView
            android:id="@+id/iv_label_add"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_add_white_24px" />


</LinearLayout>