<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.djavid.bitcoinrate.RateFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewStyle">

        <at.grabner.circleprogress.CircleProgressView
            android:id="@+id/circleView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="gone"
            CircleProgressView:cpv_autoTextSize="true"
            CircleProgressView:cpv_barColor="@color/colorPrimary"
            CircleProgressView:cpv_barWidth="5dp"
            CircleProgressView:cpv_innerContourSize="0dp"
            CircleProgressView:cpv_maxValue="100"
            CircleProgressView:cpv_outerContourSize="0dp"
            CircleProgressView:cpv_rimColor="@color/colorPrimary"
            CircleProgressView:cpv_rimWidth="5dp"
            CircleProgressView:cpv_seekMode="true"
            CircleProgressView:cpv_value="0"
            CircleProgressView:cpv_showUnit="false"
            CircleProgressView:cpv_spinColor="@color/colorChart" />

        <TextView
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/top_value_fragment"
            android:gravity="center"
            android:textSize="40sp" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="9">

            <TextView
                android:id="@+id/leftPanel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/left_value_fragment"
                android:textSize="30sp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/switch_imagebutton"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_compare_arrows" />

            <Spinner
                android:id="@+id/rightPanel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_weight="4"
                android:text="@string/right_value_fragment" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        style="@style/CardViewStyle">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"/>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/optionFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorOptionsText"
            android:layout_weight="7"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/option_one"
            android:clickable="true" />

        <TextView
            android:id="@+id/optionSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorOptionsText"
            android:layout_weight="8"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/option_two"/>

        <TextView
            android:id="@+id/optionThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorOptionsText"
            android:layout_weight="8"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/option_three"/>

        <TextView
            android:id="@+id/optionFourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorOptionsText"
            android:layout_weight="6"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/option_four"/>

    </LinearLayout>


</LinearLayout>
